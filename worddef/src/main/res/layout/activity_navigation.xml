<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.navigation_activity.NavigationActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_bottom_navigation_activity" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_bottom_navigation_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_state_selector"
        app:itemTextColor="@drawable/nav_item_state_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/nav_screen_bottom_menu" />

</RelativeLayout>